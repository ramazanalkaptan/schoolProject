    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
        document.querySelector('.toggle').addEventListener('click', function () {
            const userNav = document.querySelector('.userNav');
            const dropCheckbox = document.getElementById('drop');

            // Checkbox'ın durumuna göre userNav'ı gizle veya göster
            if (dropCheckbox.checked) {
                userNav.setAttribute('style', 'display: show !important'); // !important ile stil ayarla
            } else {
                userNav.setAttribute('style', 'display: none !important'); // !important ile stil ayarla
            }
        });
    </script>
