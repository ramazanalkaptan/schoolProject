@model School.Models.Register
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<!-- inner banner -->
<div class="inner-banner-w3ls py-5" id="home">
    <div class="container py-xl-5 py-lg-3">
        <!-- register  -->
        <div class="modal-body mt-md-2 mt-5">
            <h3 class="title-w3 mb-5 text-center text-wh font-weight-bold">Şimdi Kaydol!</h3>
            @if (TempData["SuccessMessage"] != null)
            {
                <div id="successMessage" style="color: green; text-align:center;">
                    <h5>@TempData["SuccessMessage"]</h5>
                </div>
                <script type="text/javascript">
                    setTimeout(function () {
                        window.location.href = '@Url.Action("Login", "Home")';
                    }, 5000);
                </script>
            }
            <form action="Register" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Register_Name" class="col-form-label"></label>
                    <input asp-for="Register_Name" type="text" class="form-control">
                    <span asp-validation-for="Register_Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Register_Email" class="col-form-label"></label>
                    <input asp-for="Register_Email" type="email" class="form-control">
                    <span asp-validation-for="Register_Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Register_Password" class="col-form-label"></label>
                    <input asp-for="Register_Password" type="text" class="form-control">
                    <span asp-validation-for="Register_Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Register_Password2" class="col-form-label"></label>
                    <input asp-for="Register_Password2" type="text" class="form-control">
                    <span asp-validation-for="Register_Password2" class="text-danger"></span>
                </div>
                <div class="sub-w3l my-3">
                    <div class="sub-w3layouts_hub">
                        <input type="checkbox" id="brand1" value="true" name="Terms" required>
                        <label for="brand1" class="text-li text-style-w3ls">
                            
                            <span></span>Kullanım koşulları ve şartları kabul ediyorum.
                        </label>
                        <span>@TempData["Terms"]</span>
                    </div>
                </div>
               
                <button type="submit" class="btn button-style-w3">Register</button>
            </form>
        </div>
        <!-- //register -->
    </div>
</div>
<!-- //inner banner -->