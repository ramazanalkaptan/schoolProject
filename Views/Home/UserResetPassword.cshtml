@model School.Models.UserForgotPassword

@{
    ViewData["Title"] = "UserResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Şifre Sıfırlama</h3>
<hr />
<div class="row">
    <div class="col-md-4 ml-5">
        @if (TempData["MessageSuccess"] != null)
        {

            <div class="alert alert-success">
                @Html.Raw(TempData["MessageSuccess"])
            </div>
            
        }
        <form asp-action="UserResetPassword">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserForgotEmail" class="control-label"></label>
                <input asp-for="UserForgotEmail" class="form-control" />
                <span asp-validation-for="UserForgotEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterResetCode" class="control-label"></label>
                <input asp-for="RegisterResetCode" class="form-control" />
                <span asp-validation-for="RegisterResetCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewRegisterPassword" class="control-label"></label>
                <input asp-for="NewRegisterPassword" class="form-control" />
                <span asp-validation-for="NewRegisterPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewRegisterPassword2" class="control-label"></label>
                <input asp-for="NewRegisterPassword2" class="form-control" />
                <span asp-validation-for="NewRegisterPassword2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Şifre Yenile" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

